<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_sm"
    android:paddingRight="@dimen/padding_sm"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center_vertical"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:textAllCaps="true"
        android:drawableRight="@mipmap/ic_launcher"
        android:drawableEnd="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about.version"
        android:textColor="@color/gray_700"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="@dimen/padding.sml"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version"
        android:textColor="@color/gray_700"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about.artecForza.description"
        android:textColor="@color/gray_700"
        android:layout_marginTop="@dimen/padding_sm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about.webSite"
        android:textColor="@color/blue_900"
        android:layout_marginTop="@dimen/padding_sm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about.licencias"
        android:textColor="@color/gray_700"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="@dimen/padding_sm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about.termCondition"
        android:textColor="@color/gray_700"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="@dimen/padding_sm"/>
</LinearLayout>